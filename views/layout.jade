      #myCarousel .item{
        height: 400px;
      }
      #slide1 {
        background: url("https://wendywelchbigstonegap.files.wordpress.com/2012/05/valkyttie-on-the-table.jpg") center no-repeat;
      }

      #slide2 {
        background: url("https://www.chroniclebooks.com/blog/wp-content/uploads/featured12.jpg") center no-repeat;
      }

      #slide3 {
        background: url("https://goodereader.com/blog/uploads/images/light-novel-shop-3.jpg") center no-repeat;
      }

      .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
      }

      /* On mouse-over, add a deeper shadow */
      .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
      }

      /* Add some padding inside the card container */
      .container {
        padding: 2px 16px;
      }
